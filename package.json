{
  "name": "hc-app-inventory",
  "version": "0.1.0",
  "description": "Inventory app backend + UI bundle for Hekatoncheiros.",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server/index.ts",
    "dev:web": "vite --port 4011 --strictPort",
    "build": "tsc -p src/server/tsconfig.json",
    "build:plugin": "vite build",
    "start": "node dist/server/index.js",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:migrate": "tsx src/server/db/migrate.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Talpaversum/hc-app-inventory.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/Talpaversum/hc-app-inventory/issues"
  },
  "homepage": "https://github.com/Talpaversum/hc-app-inventory#readme",
  "module": "dist-plugin/plugin.js",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.5",
    "ajv": "^8.17.1",
    "dotenv": "^17.2.3",
    "fastify": "^5.7.4",
    "jose": "^6.1.3",
    "openapi-typescript": "^7.10.1",
    "pg": "^8.18.0",
    "zod": "^4.3.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "@vitejs/plugin-react": "^4.7.0",
    "vite": "^7.0.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0"
  }
